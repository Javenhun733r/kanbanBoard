{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "../",
  "testEnvironment": "node",
  "testRegex": ".*\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@app/(.*)$": "<rootDir>/src/$1",

    "^generated/prisma$": "<rootDir>/node_modules/@prisma/client"
  },
  "transformIgnorePatterns": [
    "/node_modules/(?!@paralleldrive/cuid2|@noble/hashes)"
  ]
}
