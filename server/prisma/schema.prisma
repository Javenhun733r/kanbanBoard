generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model Card {

  id          String   @id @default(uuid())
  title       String
  description String
  boardId     String
  board       Board    @relation(fields: [boardId], references: [id])
  column      ColumnStatus
  orderIndex  Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  @@index([boardId, column, orderIndex])
	@@map("card")
}
model Board {
  id         String   @id @default(uuid())
  uniqueHashedId String @unique
  name       String
  cards      Card[]
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
	@@map("board")
}
enum ColumnStatus {
  ToDo
  InProgress
  Done
}